{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd backend && chmod +x start.sh && ./start.sh",
    "healthcheckPath": "/api/health/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  }
}
