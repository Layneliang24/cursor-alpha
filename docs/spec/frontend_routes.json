{
  "version": 1,
  "routes": [
    {
      "path": "/english",
      "name": "EnglishLayout",
      "component": "src/views/english/EnglishLayout.vue",
      "meta": { "title": "英语学习", "requiresAuth": true, "permissions": ["english.access"] },
      "children": [
        {
          "path": "words",
          "name": "WordLearning",
          "component": "src/views/english/WordLearning.vue",
          "meta": { "title": "单词学习", "permissions": ["english.access"] }
        },
        {
          "path": "expressions",
          "name": "ExpressionLearning",
          "component": "src/views/english/ExpressionLearning.vue",
          "meta": { "title": "地道表达", "permissions": ["english.access"] }
        },
        {
          "path": "progress",
          "name": "LearningProgress",
          "component": "src/views/english/LearningProgress.vue",
          "meta": { "title": "学习进度", "permissions": ["english.access", "english.progress.view"] }
        }
      ]
    }
  ]
}
